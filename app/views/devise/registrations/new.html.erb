<div class="login">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "msform", :class => ""}) do |f| %>
  <%= devise_error_messages! %>

  <fieldset class="bigger-field">
    <h3 class="fs-title">Sign Up</h3>

      <div class="form-group">
          <%= f.text_field :email, placeholder: 'Email' %>
      </div>
      <div class="form-group">
          <%= f.text_field :name, placeholder: 'Name' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' %></div>

      <div class="form-group">
        <%= f.select :role, options_for_select([["Borrower", "Borrower"], ["Community", "Community"]], "Borrower") %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", :class => 'action-button' %>
      </div>


      <%= render "devise/shared/links" %>
    </fieldset>

    <% end %>



</div>
